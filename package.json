{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/github": "^7.0.6",
    "@semantic-release/npm": "^7.0.5",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "commitizen": "^4.0.4",
    "cz-conventional-changelog": "^3.1.0",
    "docpress": "^0.8.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-sonarjs": "^0.5.0",
    "eslint-plugin-unicorn": "^18.0.1",
    "git-update-ghpages": "^1.3.0",
    "husky": "^4.2.3",
    "jest": "^25.3.0",
    "lerna": "^3.20.2",
    "semantic-release": "^17.0.7",
    "semantic-release-monorepo": "^7.0.2",
    "semantic-release-monorepo-hooks": "^2.9.5",
    "ts-jest": "^25.3.1"
  },
  "scripts": {
    "build": "lerna run build --stream",
    "test": "lerna run test --parallel",
    "lint": "lerna run lint --parallel",
    "publish:all": "lerna exec --concurrency 1 \"yarn semantic-release -e semantic-release-monorepo\"",
    "postpublish:all": "node -e \"require('semantic-release-monorepo-hooks').hookAfterAll()\"",
    "docs:preview": "yarn docpress serve",
    "docs:build": "yarn docpress build"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "plugins/drivers/*",
      "plugins/processors/*",
      "plugins/trackers/*"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
