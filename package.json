{
  "name": "root",
  "private": true,
  "devDependencies": {
    "commitizen": "^4.0.3",
    "cz-lerna-changelog": "^2.0.2",
    "lerna": "^3.16.4",
    "lerna-wizard": "^1.1.1"
  },
  "scripts": {
    "test": "exit 0",
    "lerna": "lerna",
    "bootstrap": "lerna bootstrap",
    "dev": "lerna run build --stream --parallel",
    "lerna:version": "lerna version patch && yarn run lerna:postversion",
    "lerna:postversion": "git push --follow-tags",
    "prepublish": "lerna run prepublish",
    "lerna:publish": "lerna publish from-package --yes"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "dependencies": {},
  "workspaces": [
    "packages/*",
    "plugins/drivers/*",
    "plugins/processors/*"
  ]
}
