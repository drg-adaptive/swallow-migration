{
  "packages": ["packages/*", "plugins/drivers/*", "plugins/processors/*", "plugins/trackers/*"],
  "ignoreChanges": ["**/CHANGELOG.md", "packages/data-migration-cli/README.md"],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "npmClient": "npm",
      "allowBranch": "master",
      "conventionalCommits": true
    },
    "version": {
      "message": "chore(release): release [skip ci]"
    }
  }
}
